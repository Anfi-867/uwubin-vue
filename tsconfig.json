{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "outDir": "build",
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "pretty": true,
        "strict": true,
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
